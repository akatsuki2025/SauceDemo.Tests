<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="urn:log4net">
  <!-- ConsoleAppender: logs messages to the console window -->
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <!-- Pattern: controls the format of each log line -->
      <conversionPattern value="%date %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <!-- RollingFileAppender: logs messages to a file, creates new files as needed with timestamp -->
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="logs/test-log.txt" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="'.'yyyyMMdd-HHmmss'.log'" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <!-- Root logger: sets the minimum log level and which appenders to use -->
  <root>
    <level value="INFO" />
    <!-- Log levels: ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF -->
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>